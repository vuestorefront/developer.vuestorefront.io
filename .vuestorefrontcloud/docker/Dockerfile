FROM node:lts as builder

ARG ALGOLIA_TOKEN
ARG ALGOLIA_ID
ARG GITHUB_TOKEN
ARG DEV_TO_TOKEN

ENV ALGOLIA_TOKEN=$ALGOLIA_TOKEN
ENV ALGOLIA_ID=$ALGOLIA_ID
ENV GITHUB_TOKEN=$GITHUB_TOKEN
ENV DEV_TO_TOKEN=$DEV_TO_TOKEN
ENV CI=true

WORKDIR /app

COPY . .

RUN NODE_ENV=development npm install \
  --prefer-offline \
  --frozen-lockfile \
  --non-interactive

RUN NODE_ENV=production npm run build

FROM node:lts

ARG ALGOLIA_TOKEN
ARG ALGOLIA_ID
ARG GITHUB_TOKEN
ARG DEV_TO_TOKEN

ENV ALGOLIA_TOKEN=$ALGOLIA_TOKEN
ENV ALGOLIA_ID=$ALGOLIA_ID
ENV GITHUB_TOKEN=$GITHUB_TOKEN
ENV DEV_TO_TOKEN=$DEV_TO_TOKEN
ENV NODE_ENV=production

WORKDIR /app

COPY --from=builder /app  .

RUN npm install pm2 -g

RUN env

ENV HOST 0.0.0.0
EXPOSE 3000

CMD ["pm2-runtime", ".output/server/index.mjs" ]

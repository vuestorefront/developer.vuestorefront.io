FROM node:lts as builder

ARG ALGOLIA_TOKEN
ARG ALGOLIA_ID
ARG GITHUB_TOKEN
ARG DEV_TO_TOKEN
ARG GOOGLE_TAG_ID

ENV ALGOLIA_TOKEN=$ALGOLIA_TOKEN
ENV ALGOLIA_ID=$ALGOLIA_ID
ENV GITHUB_TOKEN=$GITHUB_TOKEN
ENV DEV_TO_TOKEN=$DEV_TO_TOKEN
ENV GOOGLE_TAG_ID=$GOOGLE_TAG_ID
ENV CI=true

WORKDIR /app

COPY . .

RUN NODE_ENV=development npm install \
  --prefer-offline \
  --frozen-lockfile \
  --non-interactive

RUN NODE_ENV=production npm run build

FROM node:lts

ARG ALGOLIA_TOKEN
ARG ALGOLIA_ID
ARG GITHUB_TOKEN
ARG DEV_TO_TOKEN
ARG GOOGLE_TAG_ID

ENV ALGOLIA_TOKEN=$ALGOLIA_TOKEN
ENV ALGOLIA_ID=$ALGOLIA_ID
ENV GITHUB_TOKEN=$GITHUB_TOKEN
ENV DEV_TO_TOKEN=$DEV_TO_TOKEN
ENV GOOGLE_TAG_ID=$GOOGLE_TAG_ID
ENV NODE_ENV=production

WORKDIR /app

COPY --from=builder /app  .

RUN env

ENV HOST 0.0.0.0
EXPOSE 3000

CMD ["npm", "run", "start"]
